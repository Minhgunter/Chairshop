<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Product Management</h1>
                </div>
            </div>
            <div class="col-lg-7">
                
            </div>
        </div>
    </div>
</div>

    <div class="container">
      <div class="row mb-5 mt-5">
        <h3 class="d-flex justify-content-center">New Product</h3>
            <div class="site-blocks-table">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="product-thumbnail">Image</th>
                            <th class="product-name">Product Name</th>
                            <th class="product-slug">Slug</th>
                            <th class="product-price">Price</th>
                            <th class="product-stock">Stock</th>
                            <th class="product-description">Description</th>
                            <th class="products-tags">Tags</th>
                            <th class="company">Created by</th>
                        </tr>
                    </thead>
                    <form method="post" enctype="multipart/form-data">
                        <tbody>
                            <tr>
                                <td>
                                    <input type="file" name="image" id="image">
                                </td>
                                <td>
                                    <input type="text" name="product_name">
                                </td>
                                <td>
                                    <input type="text" name="slug">
                                </td>
                                <td>
                                    <input type="number" name="product_price">
                                </td>
                                <td>
                                    <div class="number-input">
                                        <button onclick="this.parentNode.querySelector('input[type=number]').stepDown()" type="button" id="edit" class="minus"></button>
                                        <input class="quantity" min=0 name="stock" value=0 type="number">
                                        <button onclick="this.parentNode.querySelector('input[type=number]').stepUp()" type="button" id="edit" class="plus"></button>
                                    </div>
                                </td>
                                <td>
                                    <input type="text" name="description" id="description">
                                </td>
                                <td>
                                    {{#each tags}}
                                        <div class="form-check me-5 checkbox-lg">
                                            <h3><input class="form-check-input" name="tags" type="checkbox" value="{{tag}}">{{tag}}</j3>
                                        </div>
                                    {{/each}}
                                </td>
                                <td>
                                    <select name="company" class="d-flex justify-content-center" style="width: 200px; margin: 10px;" id="company">
                                        <option value="">Choose one</option>
                                            {{#each company}}
                                                <option value="{{company}}">{{company}}</option>
                                            {{/each}}
                                    </select>
                                </td>
                                <td>
                                    <div class="col-md-12 text-center pt-5">
                                        <p><button type="submit" class="btn btn-sm btn-outline-black">Add</button></p>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </form>
                </table>
            </div>
            {{#if error}}
                <h4 class="alert alert-danger mt-4">{{error}}</h4>
            {{/if}}
        </div>


    </div>