<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>My chair</h1>
                </div>
            </div>
            <div class="col-lg-7">

            </div>
        </div>
    </div>
</div>
<!-- End Hero Section -->


<div class="container mt-4 d-flex justify-content-center">
    <div class="card" style="width: 25rem;">            
        <h3 class="card-header">Product Info</h3>    
        <div class="card-body">
            <div class="mb-3">
                <h2 class="mt-2 d-flex justify-content-center">{{product_name}}<h2>
            </div>
            <div class="mb-3">
                <img src="/images/{{image}}" width="350" height="350">
            </div>
            <div class="mb-3">
                <h3 class="d-flex justify-content-center">Price</h3>
                <div class="mt-2 d-flex justify-content-center">${{product_price}}</div>
            </div>
           <div class="mb-3">
                <h3 class="d-flex justify-content-center">Description</h3>
                <div class="mt-2 d-flex justify-content-center">{{description}}</div>
            </div>
            <div class="mb-3">
                <h3 class="d-flex justify-content-center">Status</h3>
                <div class="mt-2 d-flex justify-content-center">{{status}}</div>
            </div>
            <div class="mb-3">
                <h3 class="d-flex justify-content-center">Tags</h3>
                <div class="mt-2 text-decoration-underline d-flex justify-content-center">
                    {{#each tags}}
                        {{tag}}
                    {{/each}}
                </div>
            </div>

            <a href="/shop/{{slug}}/order" class="btn btn-sm btn-outline-black d-flex justify-content-center">Order Now!</a>
        </div>
    </div>
</div>