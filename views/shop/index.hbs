<div class="untree_co-section product-section before-footer-section">
    <div class="container">
        <div class="row mb-4">
            <h3 class="d-flex justify-content-center">Choose a category</h3>
            <div class="d-flex justify-content-center">
                {{#each tags}}
                    <a name="tag" href="/shop/tags/{{tag}}" class="btn btn-light btn-outline-primary">{{tag}}</a>
                {{/each}}
            </div>
        </div>
        <div class="row">
            {{#each products}}
                <div class="col-12 col-md-4 col-lg-3 mb-5">
                    <a class="product-item" href="/shop/{{slug}}">
                        <img src="/images/{{image}}" class="img-fluid product-thumbnail">
                        <h3 class="product-title">{{product_name}}</h3>
                        <strong class="product-price">${{product_price}}</strong>

                        <span class="icon-cross">
                            <img src="/images/cross.svg" class="img-fluid">
                         </span>
                    </a>
                </div>
            {{/each}}
        </div>
    </div>
</div>